#!/usr/bin/python3 

__version__ = 1

import os, sys

from ob.csl import execute

def main():
    curdir = os.getcwd()
    workdir = os.path.join(curdir, "work")
    if len(sys.argv) == 1:
        txt = "git pull"
    else:
        txt = " ".join(sys.argv[1:])
    for fn in os.listdir(workdir):
        try:
            os.chdir(os.path.join(workdir, fn))
            for line in os.popen(txt).readlines():
                print(line.rstrip())
        except NotADirectoryError:
            continue

execute(main)
os._exit(0)
