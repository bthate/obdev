#!/usr/bin/python3 -u

import os, sys ; sys.path.insert(0, os.getcwd())

from ob.shl import daemon, execute, parse_cli
from obot import __version__

from ob import k

def main():
    parse_cli("obdev", __version__)
    if k.cfg.daemon:
        daemon()
    k.walk("obot.cmd")
    k.init(k.cfg.modules)
    print(k)
    k.start()
    k.wait()

execute(main)
os._exit(0)
