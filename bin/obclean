#!/usr/bin/python3 

__version__ = 1

import os, sys

from ob.csl import execute

def main():
    curdir = os.getcwd()
    workdir = os.path.join(curdir, "obwork")
    if len(sys.argv) == 1:
        txt = "bin/clean"
    else:
        txt = " ".join(sys.argv[1:])
    for fn in os.listdir(workdir):
        try:
            p = os.path.join(workdir, fn)
            print(p)
            os.chdir(p)
            for line in os.popen(txt).readlines():
                #print(line.rstrip())
                pass
        except NotADirectoryError:
            continue
        os.chdir(curdir)

execute(main)
os._exit(0)
